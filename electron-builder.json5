{
  "appId": "com.nileshsingh.boltdownloader",
  "productName": "Bolt Downloader",
  "asar": true,
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "package.json"
  ],
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      }
    ],
    "artifactName": "Bolt-Downloader-${version}-${arch}.${ext}",
    "identity": null,
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "build/entitlements.mac.plist",
    "entitlementsInherit": "build/entitlements.mac.plist",
    "notarize": {
      "teamId": "${env.APPLE_TEAM_ID}"
    }
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName} ${version}.${ext}",
    "certificateSubjectName": "Bolt Downloader",
    "verifyUpdateCodeSignature": false
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "deb",
        "arch": [
          "x64"
        ]
      }
    ],
    "maintainer": "Nilesh Singh <nilesh@example.com>",
    "artifactName": "${productName} ${version}.${ext}",
    "category": "Utility"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  }
}
